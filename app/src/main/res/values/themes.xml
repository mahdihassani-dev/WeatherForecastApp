<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_500</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="fontFamily">@font/product_sans</item>
        <item name="android:windowBackground">@color/pink_200</item>

        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="WeatherTxt" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="txtLarge" parent="WeatherTxt">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">57sp</item>
    </style>

    <style name="txtReg" parent="WeatherTxt">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txtRegLow" parent="WeatherTxt">
        <item name="android:textColor">@color/black_low</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txtRegLowSmall" parent="WeatherTxt">
        <item name="android:textColor">@color/black_low</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="txtClockNum" parent="WeatherTxt">
        <item name="android:textColor">@color/black_low</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txtClockWord" parent="WeatherTxt">
        <item name="android:textColor">@color/black_low</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="txtError" parent="WeatherTxt">
        <item name="android:textColor">@color/red_error</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>

